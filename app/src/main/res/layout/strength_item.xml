<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/exercise_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Exercise:"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/reps_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Reps:"
        app:layout_constraintTop_toBottomOf="@id/exercise_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/sets_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sets:"
        app:layout_constraintTop_toBottomOf="@id/reps_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/weight_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weight:"
        app:layout_constraintTop_toBottomOf="@id/sets_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Time:"
        app:layout_constraintTop_toBottomOf="@id/weight_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
